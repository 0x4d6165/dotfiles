[module/date]
type = internal/date
interval = 1
format-foreground = ${colors.background}
format-background = ${colors.color3}

date = " %a %m/%d"
format-prefix = " " 
format-prefix-foreground = ${colors.background}
format-prefix-background = ${colors.color3}
format-padding = 1

label = %date%

[module/time]
type = internal/date
interval = 1
timea-alt = "%I:%M %p"
time = %H:%M

format-prefix = "" 
format-foreground = ${colors.background}
format-background = ${colors.color4}
format-padding = 1

label = %time%


[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume =  %percentage%%
label-volume-foreground = ${colors.background}
label-volume-background = ${colors.color5}
label-volume-padding = 1

label-muted = ""
label-muted-background = ${colors.color3}
label-muted-foreground = ${colors.background}
label-muted-padding = 1

[module/battery]
type = internal/battery
battery = "BAT1"
label-charging = "  %percentage%% "
label-charging-foreground = ${colors.background}
label-charging-background = ${colors.color2}
label-discharging-foreground = ${colors.background}
label-discharging-background = ${colors.color2}
label-discharging = "  %percentage%% "
label-full = "  %percentage%% "
label-full-foreground = ${colors.background}
label-full-background = ${colors.color2}
#format-full-prefix = %{T3} 
#format-full-prefix-foreground = #dfe2ed
#format-full-prefix-background = #809984

[module/wireless-network]
type = internal/network
interface = wlo1
interval = 3.0
udspeed-minwidth = 0
format-connected = %{A1:rofi-wifi-menu.sh:}<label-connected>%{A}
format-disconnected = %{A1:rofi-wifi-menu.sh:}<label-disconnected>%{A}
label-connected = " %essid% "
label-connected-background = ${colors.color1}
label-connected-foreground= ${colors.background}
;label-connected-background = ${color.alternate}
label-disconnected =  " offline  "
label-disconnected-foreground = ${colors.background}


