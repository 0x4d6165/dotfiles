line-color = #262626

border-size = 5
border-color = ${colors.color8}

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 

font-0 = "FiraCode Nerd Font Mono:pixelsize=12;3"
modules-left = logo gap bspwm
modules-center = 
modules-right = pulseaudio gap battery gap wifis wireless-network gap clocklogo time gap date

wm-restack = bspwm
cursor-click = pointer
cursor-scroll = ns-resize

[module/bspwm]
type = internal/bspwm
